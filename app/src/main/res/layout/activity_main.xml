<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="EU VISTO - LOGOMARCA DO LEITOR DE ETIQUETA QR"
        app:srcCompat="@drawable/euvisto"
        android:layout_weight="0.24" />

    <Button
        android:id="@+id/readtag"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="40sp"
        android:background="@drawable/shapeborda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Realizar a leitura da etiqueta QR"
        android:layout_gravity="center_horizontal"
        android:text="LER ETIQUETA QR"
        android:layout_weight="1.87" />


</LinearLayout>