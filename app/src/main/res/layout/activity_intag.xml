<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/tagtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar etiquetas"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/peca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/peca_arrays"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/cores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/cores_arrays"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/textura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/textura_arrays"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/estilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/estilo_arrays"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descreva a peÃ§a"
        android:textAlignment="center"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/addfoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar foto"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/regtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Etiqueta"
        android:background="@drawable/shapeborda"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/backmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Voltar(inicio)" />


</LinearLayout>
